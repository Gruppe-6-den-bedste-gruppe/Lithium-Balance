<Window x:Class="Lithium_Balance.Views.AddOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lithium_Balance.Views"
        xmlns:viewmodel="clr-namespace:Lithium_Balance.ViewModels"
        mc:Ignorable="d"
        Title="Add new order" SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
    </Window.Resources>
    <StackPanel Margin="5">
        <DockPanel>
            <Label Content="Order Number"/>
            <TextBox Name="OrderNumber" Text="{Binding OrderNumber}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Company Name"/>
            <TextBox Name="CompanyName"  Width="120" HorizontalAlignment="Right" Margin="5" Text="{Binding CompanyName}"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Email"/>
            <TextBox Name="Email" Text="{Binding Email}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="BMS Type"/>
            <ComboBox Name="BMSType" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding BMSType}">
                <ComboBoxItem Content="s-BMS"/>
                <ComboBoxItem Content="c-BMS"/>
                <ComboBoxItem Content="n-BMS"/>
                <ComboBoxItem Content="n3-BMS"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="BMS Version"/>
            <ComboBox Name="BMSVersion" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding BMSVersion}">
                <ComboBoxItem Content="2.2.0"/>
                <ComboBoxItem Content="2.4.0"/>
                <ComboBoxItem Content="2.5.0"/>
                <ComboBoxItem Content="2.5.4"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="Software Type"/>
            <ComboBox Name="SoftwareType" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding SoftwareType}">
                <ComboBoxItem Content="Creator SW c-BMS FULL"/>
                <ComboBoxItem Content="Diagnostic SW PRO"/>
                <ComboBoxItem Content="Diagnostic SW SERVICE"/>
                <ComboBoxItem Content="Creator SW n-BMS FULL"/>
                <ComboBoxItem Content="Creator SW n-BMS SERVICE"/>
                <ComboBoxItem Content="Creator SW n-BMS VIEWER"/>
                <ComboBoxItem Content="Creator SW n3-BMS VIEWER"/>
                <ComboBoxItem Content="Creator SW n3-BMS SERVICE"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="Software Version"/>
            <ComboBox Name="SoftwareVersion" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding SoftwareVersion}">
                <ComboBoxItem Content="2.5.2"/>
                <ComboBoxItem Content="6.15"/>
                <ComboBoxItem Content="3.0.0"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="License Duration"/>
            <TextBox Name="LicenseDuration" Text="{Binding LicensDuration}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Address"/>
            <TextBox Name="Address" Text="{Binding Address}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Date"/>
            <DatePicker Name="Date" SelectedDate="{Binding Date}" Width="120" HorizontalAlignment="Right" Margin="5" />
        </DockPanel>
        <DockPanel HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Width="70" Height="23" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButtton" Content="Cancel" Width="70" Height="23" Margin="5" Click="CancelButton_Click"/>
        </DockPanel>
    </StackPanel>
</Window>
