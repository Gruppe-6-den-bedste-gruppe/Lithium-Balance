<Window x:Class="Lithium_Balance.Views.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lithium_Balance.Views"
        mc:Ignorable="d"
        Title="Add new order" SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="5">
        <DockPanel>
            <Label Content="Order Number"/>
            <TextBox Name="AOOrderNumber" Text="{Binding OrderNumber}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Company Name"/>
            <ComboBox Name="AOCompanyName"  Width="120" HorizontalAlignment="Right" Margin="5">
                <ComboBoxItem Content="Jakobs Firma"/>
                <ComboBoxItem Content="Lucas Firma"/>
                <ComboBoxItem Content="Kevins Firma"/>
                <ComboBoxItem Content="Shucaybs Firma"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="Receiver"/>
            <TextBox Name="AOReceiver" Text="{Binding Receiver}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Email"/>
            <TextBox Name="AOEmail" Text="{Binding Email}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel>
            <Label Content="BMS Type"/>
            <ComboBox Name="AOBMSType" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding BMSType}">
                <ComboBoxItem Content="s-BMS"/>
                <ComboBoxItem Content="c-BMS"/>
                <ComboBoxItem Content="n-BMS"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="Software Version"/>
            <ComboBox Name="AOSoftwareVersion" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding SoftwareVersion}">
                <ComboBoxItem Content="2.2.2"/>
                <ComboBoxItem Content="2.4.0"/>
                <ComboBoxItem Content="2.5.0"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="Software Type"/>
            <ComboBox Name="AOSoftwareType" Width="120" Margin="5" HorizontalAlignment="Right" SelectedIndex="{Binding BMSType}">
                <ComboBoxItem Content="s-BMS"/>
                <ComboBoxItem Content="c-BMS"/>
                <ComboBoxItem Content="n-BMS"/>
            </ComboBox>
        </DockPanel>
        <DockPanel>
            <Label Content="License Duration"/>
            <TextBox Name="AOLicenseDuration" Text="{Binding LicensDuration}" Width="120" HorizontalAlignment="Right" Margin="5"/>
        </DockPanel>
        <DockPanel HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Width="70" Height="23" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="CancelButtton" Content="Cancel" Width="70" Height="23" Margin="5" Click="CancelButton_Click"/>
        </DockPanel>
    </StackPanel>
</Window>
