<Window x:Class="Lithium_Balance.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lithium_Balance.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <DockPanel Margin="10">
        <DockPanel Width="130" DockPanel.Dock="Right">
            <StackPanel>
                <Button Click="RegisterOrder_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="Tilføj" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="Update_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="Update" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="Delete_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="Slet" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
        <DockPanel Width="130" DockPanel.Dock="Left">
            <StackPanel>
                <Button Click="Order_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="Ordre" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="Customer_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="Kunde" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="BMS_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="BMS" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="Software_Click" Width="100" Height="80">
                    <StackPanel>
                        <TextBlock Text="Software" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
        <DockPanel HorizontalAlignment="Stretch">
            <ListBox>

            </ListBox>
        </DockPanel>
    </DockPanel>


</Window>
